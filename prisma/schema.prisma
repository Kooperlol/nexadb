generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Position {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  position String
  location String
  about String
  salary Int
  listed Boolean
  image String
}

model Application {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  position String
  firstname String
  lastname String
  birthdate String
  gender String
  preferredSalary Int
  email String
  phone String
  resume String
  createdAt DateTime @default(now())
}

model Inquiry {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  firstname String
  lastname String
  email String
  message String
  open Boolean @default(false)
}